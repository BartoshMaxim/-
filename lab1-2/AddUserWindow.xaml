<Window x:Class="lab1_2.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1_2"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="150" Width="230">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Height="30" Margin="10 0 0 0">Имя</Label>
        <TextBox x:Name="NameBox" Grid.Column="1" Height="30" Margin="10 0"/>
        
        <Button x:Name="AddName"  Grid.Row="1" Height="30" Width="50" Click="AddName_Click">Add </Button>
        <Button x:Name="Cancel" Grid.Column="1"  Grid.Row="1" Height="30" Width="90" Click="Cancel_Click">Cancel</Button>
    </Grid>
</Window>
