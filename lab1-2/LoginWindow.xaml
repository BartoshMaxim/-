<Window x:Class="lab1_2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1_2"
        mc:Ignorable="d"
        Title="Вход в систему" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Margin="10 0">Введите имя</Label>
        <TextBox x:Name="Login" Grid.Row="1" Margin="10 5" Grid.ColumnSpan="2"></TextBox>
        <Label Grid.Row="2" Margin="10 0">Введите пароль</Label>
        <PasswordBox x:Name="Passwd" Grid.Row="3" Margin="10 5" Grid.ColumnSpan="2"></PasswordBox>
        <Button Click="Ok_Click" Grid.Row="4" Width="100" Grid.Column="0"  Margin="5">OK</Button>
        <Button Click="Cancel_Click" Grid.Row="4" Width="100" Grid.Column="1"  Margin="5">Отмена</Button>
    </Grid>
</Window>
